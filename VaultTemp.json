{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "KeyVaultName": {
            "type": "String",
            "metadata": {
                "description": "Name of the Azure keyvault"
            }
        },
        "location": {
            "allowedValues": [
                "australiacentral",
                "australiaeast",
                "australiasoutheast",
                "brazilsouth",
                "canadacentral",
                "canadaeast",
                "centralindia",
                "centralus",
                "eastasia",
                "eastus",
                "eastus2",
                "francecentral",
                "germanywestcentral",
                "japaneast",
                "japanwest",
                "koreacentral",
                "koreasouth",
                "northcentralus",
                "northeurope",
                "norwayeast",
                "southafricanorth",
                "southcentralus",
                "southindia",
                "southeastasia",
                "switzerlandnorth",
                "uaenorth",
                "uksouth",
                "ukwest",
                "westcentralus",
                "westeurope",
                "westindia",
                "westus",
                "westus2"
            ],
            "type": "String",
            "metadata": {
                "description": "Specifies the location of Keyvault Resource"
            }
        },
        "pricingTier": {
            "defaultValue": "Standard",
            "allowedValues": [
                "Standard",
                "Premium"
            ],
            "type": "String",
            "metadata": {
                "description": "Pricing tier of Keyvault Resource"
            }
        },
        "objectId": {
            "type": "String",
            "metadata": {
                "description": "Object Id of the user"
            }
        },
        "enabledForDeployment": {
            "defaultValue": "true",
            "allowedValues": [
                "true",
                "false"
            ],
            "type": "String"
        },
        "enabledForTemplateDeployment": {
            "defaultValue": "true",
            "allowedValues": [
                "true",
                "false"
            ],
            "type": "String"
        },
        "AzureDiskEncryptionForVolumeEncryption": {
            "defaultValue": "true",
            "allowedValues": [
                "true",
                "false"
            ],
            "type": "String"
        },
        "enableRbacAuthorization": {
            "defaultValue": "true",
            "allowedValues": [
                "true",
                "false"
            ],
            "type": "String"
        },
        "softDeleteRetentionInDays": {
            "defaultValue": 90,
            "type": "Int"
        },
        "ServiceOwner": {
            "type": "String",
            "metadata": {
                "description": "The owner of resource."
            }
        },
        "Type": {
            "type": "String",
            "metadata": {
                "description": "The type of the resource."
            }
        },
        "Environment": {
            "allowedValues": [
                "dev",
                "test",
                "pre-prod",
                "prod"
            ],
            "type": "String",
            "metadata": {
                "description": "The environment of the resource."
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2018-02-14",
            "name": "[parameters('KeyVaultName')]",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": {
                "Owner": "[parameters('ServiceOwner')]",
                "Type": "[parameters('Type')]",
                "Environment": "[parameters('Environment')]"
            },
            "properties": {
                "mode": "Incremental",
                "enablePurgeProtection": true,
                "enabledForDeployment": "[parameters('enabledForDeployment')]",
                "enabledForTemplateDeployment": "[parameters('enabledForTemplateDeployment')]",
                "enabledForDiskEncryption": "[parameters('AzureDiskEncryptionForVolumeEncryption')]",
                "enableRbacAuthorization": "[parameters('enableRbacAuthorization')]",
                "accessPolicies": [
                    {
                        "tenantId": "[subscription().tenantId]",
                        "objectId": "[parameters('objectId')]",
                        "permissions": {
                            "keys": [
                                "Get",
                                "List",
                                "Update",
                                "Create",
                                "Import",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "secrets": [
                                "Get",
                                "List",
                                "Set",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "certificates": [
                                "Get",
                                "List",
                                "Update",
                                "Create",
                                "Import",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore",
                                "ManageContacts",
                                "ManageIssuers",
                                "GetIssuers",
                                "ListIssuers",
                                "SetIssuers",
                                "DeleteIssuers"
                            ]
                        }
                    }
                ],
                "tenantId": "[subscription().tenantId]",
                "sku": {
                    "name": "[parameters('pricingTier')]",
                    "family": "A"
                },
                "enableSoftDelete": true,
                "softDeleteRetentionInDays": "[parameters('softDeleteRetentionInDays')]",
                "networkAcls": {
                    "value": {
                        "defaultAction": "allow",
                        "bypass": "AzureServices",
                        "ipRules": [],
                        "virtualNetworkRules": []
                    }
                }
            }
        }
    ],
    "outputs": {}
}
